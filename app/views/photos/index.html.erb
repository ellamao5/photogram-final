<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>



<div>
  <div>
  <% if current_user != nil %>
    <form action="/insert_photo" method="post" class="form-horizontal">
      
        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image">
      

      
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="2" placeholder="Enter a caption for the photo"></textarea>
      
        <label for="owner_id"></label>
        <input type="hidden" id="owner_id" name="query_owner_id">

      <button>
        Add photo
      </button>
    </form>
  <% else %>
  <% end %>
  </div>
</div>


<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% if current_user != nil %>
        <% @list_of_photos.each do |a_photo| %>
        <tr>
          <td>
            <img src="<%= a_photo.image %>">
            
          </td>

          <td>
            <%= a_photo.caption %>
          </td>

          <td>
            <%= a_photo.owner.username %>
          </td>

          <td>
            <%= time_ago_in_words(a_photo.created_at) %> ago
          </td>

          <td>
            <%= a_photo.likes_count %>
          </td>

          <td>
            <a href="/photos/<%= a_photo.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      <% else %>
      
      <% end %>
    </table>
  </div>
</div>
