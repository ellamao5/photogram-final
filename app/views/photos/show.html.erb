<div>
  <div>
    <h1>
      Photo details
    </h1>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>">
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.owner.username %>
      </dd>

      <dt>
        Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      

      <dt>
        Fans
      </dt>
      <dd>
        <% @fans.each do |fan| %>
          <%= fan.username %>
        <% end %>
      </dd>

      <dt>
        Add a fan
      </dt>
      <dd>
        <button>Like</button>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Comments
    </h2>

    <table>
      <tr>
        <th>
          Commenter
        </th>
    
        <th>
          Comment
        </th>

        <th>
          Posted
        </th>
      </tr>
      <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.commenter.username %>
        </td>

        <td>
          <%= comment.body %>
        </td>

        <td>
          <%= time_ago_in_words(comment.created_at) %> ago
        </td>
      </tr>
      <% end %>
    </table>
    
  </div>
<div>
